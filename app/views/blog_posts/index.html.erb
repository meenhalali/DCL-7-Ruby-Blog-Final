<h2> Blog posts <h2>

<% @blog_posts.each do |blog_post| %>
    <h3> <%= link_to blog_post.title, blog_post_path(blog_post.id) %> </h3> 
    
    <%= blog_post.content%>
<% end %>

<div>
    
    <%= button_to "New Post", new_blog_post_path, method: :get, 
    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded padding-bottom 500px float-right" %>  

</div>