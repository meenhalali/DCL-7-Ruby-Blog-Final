<%= form_with model: @blog_post do |form| %>
    <% if form.object.errors.any? %>
    <div>
    <% form.object.errors.full_messages.each do |messages| %>
        <div> <%= messages %> </div>
    <% end %>
    </div>
<% end %>
<div>
    <%= form.label :title%>
    <%= form.text_field :title %>
</div>

<div>
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
</div>

<%= form.button class:"bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" %>

<%end%>